<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nerecipe.ui.FeedFragment"
        tools:layout="@layout/feed_fragment">
        <action
            android:id="@+id/toPostContentFragment"
            app:destination="@id/postContentFragment" />
        <action
            android:id="@+id/action_feedFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_feedFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postViewFragment"
            app:destination="@id/postViewFragment" />


    </fragment>
    <fragment
        android:id="@+id/postContentFragment"
        android:name="ru.netology.nerecipe.ui.PostContentFragment"
        tools:layout="@layout/post_content_fragment">
        <argument
            android:name="initialContent"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="ru.netology.nerecipe.ui.categoryFragment"
        tools:layout="@layout/category_fragment">
        <argument
            android:name="initialContent"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_categoryFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="ru.netology.nerecipe.ui.categoryFragment"
        tools:layout="@layout/favorite_fragment">
        <argument
            android:name="initialContent"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_favoriteFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>

    <fragment
        android:id="@+id/postViewFragment"
        android:name="ru.netology.nerecipe.ui.categoryFragment"
        tools:layout="@layout/post_view_fragment">
        <argument
            android:name="initialContent"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_postViewFragment_to_postContentFragment"
            app:destination="@id/postContentFragment" />
        <action
            android:id="@+id/action_postViewFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>


</navigation>